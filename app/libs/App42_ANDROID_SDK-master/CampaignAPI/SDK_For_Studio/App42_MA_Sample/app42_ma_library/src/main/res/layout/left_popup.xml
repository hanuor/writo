<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageButton
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:src="@drawable/ic_close"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/dialog_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerInParent="true"
        android:background="@null"
        android:maxHeight="60dp"
        android:src="@drawable/ic_launcher"
        android:maxWidth="60dp" >
    </ImageView>

    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/close_button"
        android:layout_toRightOf="@+id/dialog_icon"
        android:gravity="left"
        android:text="Campaign seven is about the"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/message_text1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/dialog_icon"
        android:layout_below="@+id/title_text"
        android:gravity="left"
        android:text="@string/app42_virality_desc"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/message_text2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_text1"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="text22"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/message_text3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_text2"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="text333"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:visibility="gone"/>

</RelativeLayout>